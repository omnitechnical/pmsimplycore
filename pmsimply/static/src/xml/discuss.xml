<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="mail.NotificationAlert">
        <t t-jquery=".o_notification_alert .alert .alert-primary" t-operation="replace">
          <center t-if="widget.isNotificationBlocked" class="o_notification_alert alert alert-primary">
            PMSimply Push notifications have been blocked. Go to your browser settings to allow them.
          </center>
        </t>
    </t>
</templates>
